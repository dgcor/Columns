{
  "action": [
    {
      "name": "resource.add",
      "id": "options",
      "ignorePrevious": true
    },
    {
      "name": "action.set",
      "id": "prevDifficulty",
      "action": {
        "name": "if.equal",
        "param1": "%menu.currentIdx%",
        "param2": 0,
        "then": {
          "name": "switch",
          "param": "%difficultyArcade%",
          "case": [
            {
              "value": "normal",
              "action": { "name": "variable.set", "key": "difficultyArcade", "value": "hard" }
            },
            {
              "value": "hard",
              "action": { "name": "variable.set", "key": "difficultyArcade", "value": "easiest" }
            },
            {
              "value": "easiest",
              "action": { "name": "variable.set", "key": "difficultyArcade", "value": "easy" }
            },
            {
              "value": "easy",
              "action": { "name": "variable.set", "key": "difficultyArcade", "value": "normal" }
            }
          ]
        }
      }
    },
    {
      "name": "action.set",
      "id": "nextDifficulty",
      "action": {
        "name": "if.equal",
        "param1": "%menu.currentIdx%",
        "param2": 0,
        "then": {
          "name": "switch",
          "param": "%difficultyArcade%",
          "case": [
            {
              "value": "normal",
              "action": { "name": "variable.set", "key": "difficultyArcade", "value": "easy" }
            },
            {
              "value": "easy",
              "action": { "name": "variable.set", "key": "difficultyArcade", "value": "easiest" }
            },
            {
              "value": "easiest",
              "action": { "name": "variable.set", "key": "difficultyArcade", "value": "hard" }
            },
            {
              "value": "hard",
              "action": { "name": "variable.set", "key": "difficultyArcade", "value": "normal" }
            }
          ]
        }
      }
    }
  ],
  "inputEvent": [
    {
      "key": "esc",
      "action": { "name": "resource.pop" }
    },
    {
      "key": "left",
      "action": "prevDifficulty"
    },
    {
      "key": "right",
      "action": "nextDifficulty"
    }
  ],
  "replaceVars": "value",
  "texture": { "file": "gfx|scale|x/options.png" },
  "button": {
    "id": "background",
    "anchor": "none",
    "texture": "options",
    "captureInputEvents": true
  },
  "text": [
    {
      "id": "txtOptions",
      "font": "font1White",
      "position": ["|$.#scale * 128|", "|$.#scale * 16|"],
      "anchor": "none",
      "text": "Options"
    },
    {
      "id": "arrow",
      "font": "font1Cyan",
      "position": ["|$.#scale * 32|", "|$.#scale * 40|"],
      "anchor": "none",
      "text": "["
    },
    {
      "id": "txtDifficulty",
      "font": "font1White",
      "position": ["|$.#scale * 72|", "|$.#scale * 56|"],
      "anchor": "none",
      "binding": "%difficultyArcade%"
    },
    {
      "id": "txtPadDown",
      "font": "font1Cyan",
      "position": ["|$.#scale * 56|", "|$.#scale * 96|"],
