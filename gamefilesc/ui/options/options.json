  "menu": {
    "id": "menu",
    "font": "font1Yellow",
    "position": ["|$.#scale * 48|", "|$.#scale * 40|"],
    "focus": true,
    "anchor": "none",
    "items": [
      {
        "position": ["|$.#scale * 48|", "|$.#scale * 40|"],
