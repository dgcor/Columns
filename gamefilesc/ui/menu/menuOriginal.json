{
  "action": {
    "name": "resource.add",
    "id": "menuOriginal",
    "ignorePrevious": true
  },
  "load": "ui/menu/commonOriginal.json",
  "inputEvent": [
    {
      "key": "esc",
      "action": { "name": "resource.pop" }
    },
    {
      "key": "enter",
      "action": "newGame"
    },
    {
      "key": "left",
      "action": "prevOptionOriginal"
    },
    {
      "key": "right",
      "action": "nextOptionOriginal"
    },
    {
      "key": "up",
      "action": "upOptionOriginal"
    },
    {
      "key": "down",
      "action": "downOptionOriginal"
    },
    {
      "key": "a",
      "action": "prevOptionOriginalP2"
    },
    {
      "key": "d",
      "action": "nextOptionOriginalP2"
    },
    {
      "key": "w",
      "action": "upOptionOriginalP2"
    },
    {
      "key": "s",
      "action": "downOptionOriginalP2"
    }
  ],
  "replaceVars": "value",
  "button": {
    "id": "background",
    "anchor": "none",
    "texture": "options",
    "captureInputEvents": true
  },
