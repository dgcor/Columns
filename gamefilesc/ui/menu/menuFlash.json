{
  "action": {
    "name": "resource.add",
    "id": "menuFlash",
    "ignorePrevious": true
  },
  "load": "ui/menu/commonFlash.json",
  "inputEvent": [
    {
      "gameInputEvent": "esc",
      "action": { "name": "resource.pop" }
    },
    {
      "gameInputEvent": "enter",
      "action": "playGame"
    },
    {
      "gameInputEvent": "left",
      "action": "prevOptionFlash"
    },
    {
      "gameInputEvent": "right",
      "action": "nextOptionFlash"
    },
    {
      "gameInputEvent": "up",
      "action": "upOptionFlash"
    },
    {
      "gameInputEvent": "down",
      "action": "downOptionFlash"
    },
    {
      "gameInputEvent": "left2",
      "action": "prevOptionFlashP2"
    },
    {
      "gameInputEvent": "right2",
      "action": "nextOptionFlashP2"
    },
    {
      "gameInputEvent": "up2",
      "action": "upOptionFlashP2"
    },
    {
      "gameInputEvent": "down2",
      "action": "downOptionFlashP2"
    }
  ],
  "replaceVars": "value",
  "button.background": {
    "id": "background",
    "anchor": "none",
    "texture": "options",
    "captureInputEvents": true
  },
  "menu": [
    {
      "id": "menu",
      "font": "font1Yellow",
      "position": ["|$.#scale * 48|", "|$.#scale * 40|"],
      "anchor": "none",
      "items": [
        {
          "position": ["|$.#scale * 40|", "|$.#scale * 24|"],
          "text": "Class"
        },
        {
          "position": ["|$.#scale * 40|", "|$.#scale * 72|"],
          "text": "Height"
        },
        {
          "position": ["|$.#scale * 40|", "|$.#scale * 120|"],
          "text": "BGM"
        }
      ]
    },
    {
      "id": "menuP2",
      "font": "font1Yellow",
      "position": ["|$.#scale * 48|", "|$.#scale * 40|"],
      "anchor": "none",
      "items": [
        { "text": "" },
        { "text": "" }
      ]
    }
  ],
  "button": [
    {
      "id": "btnClassNovice",
      "font": "font1White",
      "position": ["|$.#scale * 72|", "|$.#scale * 48|"],
      "anchor": "none",
      "text": "Novice",
      "onClick": "selectClassNovice",
      "onRightClick": "selectClassNoviceP2"
    },
    {
      "id": "btnClassAmateur",
