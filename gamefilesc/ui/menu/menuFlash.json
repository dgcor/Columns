  "animation": [
    {
      "id": "animClassPlayer1",
      "texturePack": "player1",
      "position": ["|$.#scale * 72|", "|$.#scale * 40|"],
      "anchor": "none",
      "refresh": 60
    },
    {
      "id": "animClassPlayer2",
      "texturePack": "player2",
      "position": ["|$.#scale * 72|", "|$.#scale * 56|"],
      "anchor": "none",
      "refresh": 60,
      "visible": "|player2|"
    },
    {
      "id": "animHeightPlayer1",
      "texturePack": "player1",
      "position": ["|$.#scale * 72|", "|$.#scale * 88|"],
      "anchor": "none",
      "refresh": 60,
      "pause": true
    },
    {
      "id": "animHeightPlayer2",
      "texturePack": "player2",
      "position": ["|$.#scale * 72|", "|$.#scale * 104|"],
      "anchor": "none",
      "refresh": 60,
      "pause": true,
      "visible": "|player2|"
    },
    {
      "id": "animBGM",
      "texturePack": "select",
      "position": ["|$.#scale * 72|", "|$.#scale * 136|"],
      "anchor": "none",
      "color": "0xA0A000",
      "refresh": 60,
      "pause": true
    }
  ],
  "action.update": [
    "updateBGM",
    "updateHeight",
    "updateHeightP2",
    "updateClass",
    "updateClassP2"
  ]
